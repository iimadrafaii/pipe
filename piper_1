import csv

# Specify file names
input_file = "your_file.csv"  # Original CSV file
output_file = "filtered_output.csv"  # New CSV file with selected columns

# Specify the columns to extract
columns_to_extract = ["Column1", "Column2"]  # Replace with actual column names

# Read the original file and extract specific columns
with open(input_file, newline='', encoding="utf-8") as infile:
    reader = csv.reader(infile)
    headers = next(reader)  # Read the header row

    # Find indices of desired columns
    indices = [headers.index(col) for col in columns_to_extract]

    # Write extracted columns to a new file
    with open(output_file, "w", newline='', encoding="utf-8") as outfile:
        writer = csv.writer(outfile)
        writer.writerow(columns_to_extract)  # Write header
        for row in reader:
            writer.writerow([row[i] for i in indices])  # Write selected columns

# Read and display the new CSV file
with open(output_file, newline='', encoding="utf-8") as outfile:
    reader = csv.reader(outfile)
    for row in reader:
        print(row)  # Print each row of the new file
